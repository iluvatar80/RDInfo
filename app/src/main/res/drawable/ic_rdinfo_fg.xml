<!-- File: app/src/main/res/drawable/ic_rdinfo_fg.xml -->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Etwas kleiner zentriert, damit nichts abgeschnitten wird -->
    <group
        android:pivotX="54"
        android:pivotY="54"
        android:scaleX="0.78"
        android:scaleY="0.78">

        <!-- ===== Pille (rot / blau), horizontal mittig geteilt ===== -->

        <!-- Linke Hälfte: roter Halbteil (Kreis + Rechteck bis zur Mitte) -->
        <!-- Kreis links (r=14, Mitte bei 39,54) -->
        <path
            android:fillColor="#FF3B30"
            android:pathData="M25,54 a14,14 0 1,0 28,0 a14,14 0 1,0 -28,0"/>
        <!-- Rechteck bis zur Mitte -->
        <path
            android:fillColor="#FF3B30"
            android:pathData="M39,40 H54 V68 H39 Z"/>

        <!-- Rechte Hälfte: blauer Halbteil (Kreis + Rechteck ab der Mitte) -->
        <!-- Kreis rechts (r=14, Mitte bei 69,54) -->
        <path
            android:fillColor="#29B6F6"
            android:pathData="M55,54 a14,14 0 1,0 28,0 a14,14 0 1,0 -28,0"/>
        <!-- Rechteck ab der Mitte -->
        <path
            android:fillColor="#29B6F6"
            android:pathData="M54,40 H69 V68 H54 Z"/>

        <!-- Dünne helle Trennlinie genau in der Mitte -->
        <path
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFFFF"
            android:strokeWidth="2"
            android:strokeLineCap="round"
            android:pathData="M54,42 L54,66"/>
    </group>
</vector>
